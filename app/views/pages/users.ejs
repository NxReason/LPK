<!DOCTYPE html>
<html lang="ru">
<head>
  <% include ../partials/head %>
  <title>Users</title>

  <link rel="stylesheet" href="/css/common.styles.css">
</head>
<body>
  <div class="l-content">
    <div class="l-row l-header header">
      <% include ../partials/navMenu %>
      <% include ../partials/dashboard %>
    </div>

    <div class="users">
      <a href="/admin/users/new" class='users-btn users-btn-new'>Новый пользователь</a>

      <table class='users-table'>
        <thead>
          <tr>
            <th>Логин</th>
            <th>Имя</th>
            <th>E-mail</th>
            <th>Уровень</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
            <tr data-user-id="<%= user.id %>">
              <td><%= user.username %></td>
              <td><%= user.firstName + " " + user.lastName %></td>
              <td><%= user.email %></td>
              <td><%= user.level %></td>
              <td>
                <a href="/admin/users/edit/<%= user.id %>" class='users-btn users-btn-edit'>Изменить</a>
                <button class='users-btn users-btn-delete'
                        data-user-id="<%= user.id %>">
                        Удалить
                </button>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>

    </div>
  </div>
  <script src="/js/usersList.bundle.js" type="text/javascript"></script>
</body>
</html>
