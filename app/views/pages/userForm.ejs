<!DOCTYPE html>
<html lang="ru">
<head>
  <% include ../partials/head %>
  <title>Admin Panel</title>

  <link rel="stylesheet" href="/css/common.styles.css">
</head>
<body>
  <div class="l-content">
    <div class="l-row l-header header">
      <% include ../partials/navMenu %>
      <% include ../partials/dashboard %>
    </div>

    <div class="user-form-wrapper">
      <form action="<%= action %>" method="<%= method %>" class="user-form">
        <input type="text" name="username" value="<%= editedUser.username %>" placeholder="Логин">

        <input type="password" name="password" id="password" placeholder="Пароль">
        <input type="password" name="password-verify" id="password-verify" placeholder="Подтверждение пароля">

        <input type="text" name="firstname" value="<%= editedUser.firstname %>" placeholder="Имя">
        <input type="text" name="lastname" value="<%= editedUser.lastname %>" placeholder="Фамилия">

        <input type="email" name="email" value="<%= editedUser.email %>">
      </form>
    </div>

  </div>

  <script src="/js/common.bundle.js" type="text/javascript"></script>
</body>
</html>
