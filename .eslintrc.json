{
  "extends": "airbnb-base",
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "no-console": "off",
    "linebreak-style": "off",
    "no-unused-vars": ["error", { "argsIgnorePattern": "next" }],
    "no-param-reassign": ["error", { "props": false }],
    "no-plusplus": "off",
    "no-use-before-define": ["error", "nofunc"],
    "array-bracket-spacing": ["error", "always", { 
      "singleValue": false,
      "objectsInArrays": false 
    }]
  }
}